.title{margin:100rpx auto;font-size:40rpx;color:#f76f00;font-weight:bolder;text-align: center}
.table {width:94%;margin:0 auto;margin-bottom:50rpx;border-radius:10rpx;overflow: hidden;border: 1rpx solid #d9d9d9;}
.tr {display: flex;width: 100%;height: 3rem;align-items: center;border-top: 1rpx solid #d9d9d9;box-sizing:border-box;}
.td {flex-grow: 1;justify-content: center;text-align: center;height: 3rem;line-height: 3rem;border-right: 1rpx solid #d9d9d9;box-sizing:border-box;}
.th {box-sizing:border-box;width: 100%;justify-content: center;background: #f5f5f5;color: #1e388c;
height: 3rem;align-items: center;font-weight: bolder;}
.th image{height:50rpx;width:50rpx;margin: 30rpx 18rpx;float:left;}
.th .dayNum{float:left;line-height:2.8rem;font-size:40rpx;}
.th .weekDay{float:right;height:2rem;width:30%;font-size:30rpx;display: flex;flex-wrap:wrap;flex-direction: row-reverse;padding:18rpx 22rpx;}
.remarks{width:100%;border-right:0;}
.select{width:3rem;flex-grow:0;}
.closeBorder{border-right:0;}
.selectNum{width:4rem;flex-grow:0;}
.section__title{display: flex;padding:31rpx 0 0 25rpx;}
.itemName{text-align: left;padding-left:20rpx;}
.input-text{border: 2rpx solid #ccc;height:80rpx;width:85rpx;border-radius:10rpx;margin:12rpx 0 0 22rpx; text-align: left;padding-left:15rpx;}
.remarks .input-text{width:92%;}
.btn{width:100%;height:auto;text-align: center;}
.button{width:30%;text-align: center;background: #f76f00;color:#fff;margin:50rpx 20rpx 80rpx 20rpx;font-size:32rpx;display: inline-block;line-height: 70rpx;}
.throught{text-decoration:line-through;}